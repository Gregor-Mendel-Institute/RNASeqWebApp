<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:gview="urn:import:at.gmi.nordborglab.widgets.geneviewer.client"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

    <ui:with field="mainRes" type="com.gmi.rnaseqwebapp.client.resources.MyResources" />
    <ui:style>
    	.container {
			margin:6px;

		}
		.genecontainer {

 		}
    </ui:style>
	<g:ScrollPanel>
		<g:LayoutPanel ui:field="container">
			<g:layer top="0px" height="300px" left="0px" right="0px">
			<g:HTMLPanel height="290px" addStyleNames="{style.container} {mainRes.style.box_shadow}">
				<g:ResizeLayoutPanel height="280px" addStyleNames="{style.genecontainer}">
					<gview:GeneViewer ui:field="geneViewer" dynamicWidth="true" />
				</g:ResizeLayoutPanel>
			</g:HTMLPanel>
			</g:layer>
			<g:layer top="300px" height="420px">
				<g:HTMLPanel height="400px" addStyleNames="{style.container} {mainRes.style.box_shadow}">
					<div class="">
						<g:ResizeLayoutPanel ui:field="phenotype_container" height="400px"/>
					</div>
				</g:HTMLPanel>
			</g:layer>
		</g:LayoutPanel>
	</g:ScrollPanel>
</ui:UiBinder>
